        <group name="totals">
            <item name="aw_giftcard" instance="Aheadworks\Giftcard\Model\Sales\Totals\Quote" sort_order="1000"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="aw_giftcard" instance="Aheadworks\Giftcard\Model\Sales\Totals\Invoice" sort_order="1000"/>
