<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="render.product.prices">
        <arguments>
            <argument name="aw_giftcard" xsi:type="array">
                <item name="prices" xsi:type="array">
                    <item name="final_price" xsi:type="array">
                        <item name="render_class" xsi:type="string">Aheadworks\Giftcard\Pricing\Render\FinalPriceBox</item>
                        <item name="render_template" xsi:type="string">Aheadworks_Giftcard::product/price/final_price.phtml</item>
                    </item>
                    <item name="configured_price" xsi:type="array">
                        <item name="render_class" xsi:type="string">Aheadworks\Giftcard\Pricing\Render\ConfiguredPriceBox</item>
                        <item name="render_template" xsi:type="string">Aheadworks_Giftcard::product/price/final_price.phtml</item>
                    </item>
                </item>
            </argument>
        </arguments>
    </referenceBlock>
</layout>
